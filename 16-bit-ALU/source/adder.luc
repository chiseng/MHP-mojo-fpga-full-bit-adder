module adder (
    input alufn[6],
    input a[16],
    input b[16],
    output out[16]
  ) {

  always {
    // initialise output array
    out = 0;
    
    case (alufn[5:0]){
      // if alufn is 000000 => Add a with b
      b000000:
        out = $signed(a) + $signed(b);
      
      // if alufn is 000001 => Subtract b from a
      b000001:
        out = $signed(a) - $signed(b);
    }
  }
}
